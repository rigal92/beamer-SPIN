\usetikzlibrary{positioning}

% Background
\setbeamertemplate{background}{
  \begin{tikzpicture}
  \useasboundingbox (0,0) rectangle (\the\paperwidth,\the\paperheight);
  \ifnum\thepage=1\relax%
  \node [anchor=east] at (\the\paperwidth,.5\paperheight) {\includegraphics[width=.188\paperwidth]{../img/side-title}};
   \fi
  \end{tikzpicture}
}

\setbeamertemplate{background canvas sectionpage}{%
  \tikz\node[fill=SectionBlue,minimum width=\paperwidth,minimum height=\paperheight] {};
}

\setbeamertemplate{title page}{
  \begin{minipage}[t][\paperheight]{\textwidth}
    \begin{minipage}[t][.56\paperheight]{\textwidth}
    \vspace{.15\paperheight}
      \ifx\inserttitle\@empty\else\usebeamertemplate*{title}\fi%
    \end{minipage}
    % \vspace{.15\paperheight}
    \ifx\beamer@shortauthor\@empty\else\usebeamertemplate*{author}\fi%  

    \vspace{.07\paperheight}
    \includegraphics[height=.209\pageheight]{../img/logo.png}
    \begin{beamercolorbox}[wd=.7\paperwidth,sep=.5cm]{title}
      \textbf{Consiglio Nazionale} delle \textbf{Ricerche}\par
      \vspace{1ex}%
      \textbf{Instituto Superconduttori, Materiali Innovativi} e \textbf{Dispositivi}
    \end{beamercolorbox}
  \end{minipage}
}

\setbeamertemplate{title}{
  \raggedright%
  \linespread{1.0}%
  \inserttitle%
  \par%
  \vspace*{0.5em}
}

\setbeamertemplate{author}{
  \insertauthor%
  \ifx\beamer@role\@empty\else{
    \ ---
    \insertrole\ at \textbf{CNR - SPIN}}\fi% 
  \par

}
\setbeamertemplate{section page}
{
    \setbeamercolor{background canvas}{bg=white}
    \frame{
      \begin{centering} 
      \usebeamercolor[fg]{section title} 
      \usebeamerfont{section title} 
       \insertsection
      \par 
      \end{centering}   
    }
}
